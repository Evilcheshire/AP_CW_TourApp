<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/23.0.1"
      prefWidth="960"
      prefHeight="540">

    <VBox fx:id="formBox" alignment="CENTER" prefWidth="490" spacing="15" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
        <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Вхід до TourApp" />
        <TextField fx:id="emailField" maxWidth="300" promptText="Електронна пошта" />
        <PasswordField fx:id="passwordField" maxWidth="300" promptText="Пароль" />
        <Button fx:id="loginButton" onAction="#handleLogin" prefWidth="100" text="Увійти" />
        <Hyperlink fx:id="registerLink" onAction="#goToRegister" text="Немає акаунта? Зареєструватись" />
    </VBox>

    <VBox alignment="CENTER" prefWidth="490" style="-fx-background-color: #eef2f7;" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
        <VBox alignment="CENTER" maxWidth="300" spacing="10">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Вітаємо у TourApp!" textAlignment="CENTER" wrapText="true" />
            <Label text="Обирайте найкращі тури, порівнюйте ціни та бронюйте легко." textAlignment="CENTER" wrapText="true" />
        </VBox>
    </VBox>
</HBox>
